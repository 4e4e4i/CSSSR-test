.field-range
	display block

.field-range__track-container
	position relative

.field-range__values
	position relative

	display flex
	justify-content space-between

	&::before
		position absolute
		top 0
		left 0
		content ''

		width 100%
		height: 4px;

		background url('../images/underline.jpg') repeat

.field-range__value
	position relative

	max-width 190px
	margin-right 20px
	padding-top 28px

	font-size 13px
	line-height 19px
	color: $main-color

	cursor pointer

	&::before
		position absolute
		top 4px
		left 0
		content ''

		height 10px
		width 2px

		background-image linear-gradient(to right, #9f8365 10%, #422720)

	&:first-child::before
		top 2px
		height 22px

	&:last-child::before
		left auto
		right 0
		height 22px

	&:last-child
		margin-right 0
		text-align right

.field-textarea
	width 100%
	min-height 176px

	font-size 30px
	line-height 60px
	color $main-color-light

	background transparent url('../images/textarea.png') repeat

	cursor text

.field-range__track-btn
	position absolute
	top -15px
	left 371px
	transform translateX(-50%)

	width 17px
	height 14px

	background transparent url('../images/triangle.png') no-repeat
	border none

	transition 300ms ease
