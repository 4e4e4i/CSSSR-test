.field-radio
	position relative

	cursor pointer

.field-radio__input
	position absolute

	opacity 0

.field-radio__text
	padding-left 33px

	font-size 20px
	line-height 25px

.field-radio__icon
	position absolute
	top 50%
	left 0
	transform translateY(-50%)

	height 26px
	width 26px

	background url('../images/radio.png') no-repeat

.field-radio__input:checked ~ .field-radio__icon::before
	content ''
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)

	width 12px
	height 12px

	background-image url('../images/ellipse.png')
